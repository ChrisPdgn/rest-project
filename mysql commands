**ΚΑΘΗΓΗΤΗΣ**

create table instructor (username varchar(50) not null primary key,firstname varchar(50) not null,lastname varchar(50) not null,email varchar(50) not null, field varchar(100) not null, applications varchar(255) default null, foreign key (username) references user(username))ENGINE=InnoDB DEFAULT CHARSET=utf8;

